
@{
    ViewData["Title"] = "Shop the Ctrl-Alt-PC Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Please choose a product</h2>

<ul>
    @for(var i = 1; i < 11; i++)
    {
        <li><a asp-controller="Store" asp-action="Details" asp-route-product="Product @i">Product @i</a></li>
    }
</ul>